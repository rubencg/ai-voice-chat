<Window x:Class="VoiceChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Chat App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="inputTextBox" Grid.Row="0" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        <ToggleButton x:Name="microphoneToggleButton" Grid.Row="1" Margin="10" Content="Microphone" Checked="MicrophoneToggleButton_Checked" Unchecked="MicrophoneToggleButton_Unchecked" />
    </Grid>
</Window>
